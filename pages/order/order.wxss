.containerbox {
  width: 100%;
  height: max-content;
  box-sizing: border-box;
  padding: 30px;
  display: flex;
  flex-direction: column;
}

.tips {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 15px;
}

.tips text {
  display: block;
  box-sizing: border-box;
  font-weight: 700;
  line-height: 22px;
  font-size: 13px;
}

.containerbox .btn {
  box-sizing: border-box;
  margin: 15px 0;
  font-size: 16px;
  background-color: #dfe6e9;
  border: 1px solid #dfe6e9;
}

.imgbox {
  height: 120px;
  width: 120px;
  box-sizing: border-box;
  margin: auto;
  margin-top: 20px;
}

.imgbox image {
  height: 100%;
  width: 100%;
}
