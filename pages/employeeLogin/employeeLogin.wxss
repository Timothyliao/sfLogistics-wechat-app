page {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
}

.container {
  margin: 0;
  padding: 30px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.logo {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.img {
  border-radius: 50%;
  height: 40px;
  width: 40px;
  background-color: #fff;
  padding: 5px;
  transform: translate(-50%, 0);
  border: 1px solid #2c2c2c;
}

.message {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20px;
  margin-top: 50px;
  display: flex;
  flex-direction: column;
}

.row {
  box-sizing: border-box;
  margin: 12px 0;
  width: 100%;
}

.tb {
  border: none;
  border-bottom: 1px solid #57606f;
  box-sizing: border-box;
  height: 38px;
  padding-left: 12px;
  letter-spacing: 2px;
}

.code {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.code .icode {
  display: inline-block;
  width: 50%;
}

.code .txt {
  border: none;
  color: #c23616;
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 5px;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.btn {
  height: 40px;
  width:95%;
  margin: auto;
  font-size: 17px;
  line-height: 40px;
  margin-top: 30px;
  border-radius: 22px;
  background-color:#c23616;
  color: #fff;
}
